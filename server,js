const express = require('express');
const path = require('path');
const app = express();

// IMPORTANT: Heroku assigns the port dynamically
const PORT = process.env.PORT || 3000;

// Serve static files from dist directory with proper MIME types
app.use(express.static(path.join(__dirname, 'dist'), {
  setHeaders: (res, path) => {
    if (path.endsWith('.gltf')) {
      res.setHeader('Content-Type', 'model/gltf+json');
    }
    if (path.endsWith('.hdr')) {
      res.setHeader('Content-Type', 'application/octet-stream');
    }
    if (path.endsWith('.glb')) {
      res.setHeader('Content-Type', 'model/gltf-binary');
    }
    if (path.endsWith('.webmanifest')) {
      res.setHeader('Content-Type', 'application/manifest+json');
    }
  }
}));

// Handle client-side routing - send all requests to index.html
app.get('*', (req, res) => {
  res.sendFile(path.join(__dirname, 'dist', 'index.html'));
});

// CRITICAL: Bind to 0.0.0.0 for Heroku d
app.listen(PORT, '0.0.0.0', () => {
  console.log(`ğŸš€ Server is running on port ${PORT}`);
  console.log(`ğŸ“± Environment: ${process.env.NODE_ENV || 'development'}`);
  console.log(`ğŸ“ Serving files from: ${path.join(__dirname, 'dist')}`);
});